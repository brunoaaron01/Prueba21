@model Prueba21.Models.Habitacion

@{
    ViewData["Title"] = "Crear Habitación";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4><i class="fas fa-bed"></i> Nueva Habitación</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Numero" class="form-label fw-bold"></label>
                    <input asp-for="Numero" class="form-control" placeholder="Ingrese el número de habitación">
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tipo" class="form-label fw-bold"></label>
                    <input asp-for="Tipo" class="form-control" placeholder="Ej: Individual, Doble, Suite">
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Precio" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Precio" class="form-control" placeholder="Ingrese el precio por noche">
                    </div>
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la lista
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar Habitación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}